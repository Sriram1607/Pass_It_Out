<h2 style="font-family:Calibri">Friend Requests</h2>
@{

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">FriendId</th>
                <th scope="col">Status</th>
                <th scope="col">Confimation</th>
            </tr>
        </thead>
        <tbody>

            @foreach (Friend friend in ViewBag.FriendsList)
            {
                <tr>
                    <td>@friend.UserId</td>
                    <td>@friend.Status</td>
                    <td>
                        @Html.ActionLink("Accept", "AcceptFriend", "Friend" ,new{@Id=friend.UserId})
                        @Html.ActionLink("Block", "BlockFriend", "Friend", new { @Id= friend.UserId })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


<a href="/Friend/AllFriends">Back</a>





